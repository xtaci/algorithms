#include<stdio.h>
#include<stdlib.h>
//#include<conio.h>
int stk[10],top,mxstk,item,i,ch,n,btm,k;
int push();
int pop();
int palindroome();
int display();
int main()
{
    
    for(;;)
    {
        printf("\t MENU \n");
        printf("1.PUSH \n2.POP \n3.check for Palindrome \n4.display \n5.exit");
        printf("Enter ur choice \n");
        scanf("%d", &ch);
        switch(ch)
        {
            case 1: push();
                    break;
            case 2: pop();
                    break;
            case 3: palindroome();
                    break;
            case 4: display();
                    break;
           // case 5: exit(0);
            default: printf("Input is Invalid \n");
        }
    }
}
int push()
{
    if(top==mxstk)
        printf("INSERTION IS NOT POSSIBLE DUE TO OVERFLOW \n");
    else
    {
        top=top+1;
        stk[top]=item;
        return 0;
    }
}
int pop()
{
    if(top==0)
        printf("DELETION IS NOT POSSIBLE DUE TO UNDERFLOW \n");
    else
    {
        item=stk[top];
       top=top-1;
       return 0;
    }
}
int palindroome()
{
    btm=0;
    top=n-1;
    for(i=top;i>btm;i--)
    {
        if(stk[i]==stk[btm])
            k=1;
        else
            {
              k=0;
              break;
           }
    btm++;
    }
    if(k==1)
        printf("The stack is palindrome \n");
        return 0;
}
int display()
{
    printf("he stack is \n");
    for(i=0;i<n;i++)
        printf("%d", stk[i]);
    return 0;
}
